root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.html]
indent_style = space
indent_size = 2

[*.{css,scss,sass,less}]
indent_style = space
indent_size = 2

[*.{js,json}]
indent_style = space
indent_size = 2

[{.gitconfig,.gitignore,gitcommit}]
indent_style = space
indent_size = 4

[*.{md,markdown}]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

[{.bowerrc,.eslintrc}]
indent_style = space
indent_size = 2
